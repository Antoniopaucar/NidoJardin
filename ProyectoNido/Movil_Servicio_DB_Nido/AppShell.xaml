<?xml version="1.0" encoding="UTF-8" ?>
<Shell
     x:Class="Movil_Servicio_DB_Nido.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Movil_Servicio_DB_Nido"
    Title="Movil_Servicio_DB_Nido"
    Shell.NavBarIsVisible="False">

    <!-- Login y selecciÃ³n de hijo -->
    <ShellContent Route="login"
                  ContentTemplate="{DataTemplate views:LoginPage}" />

    <ShellContent Route="children"
                  ContentTemplate="{DataTemplate views:SelectChildPage}" />
    
    <ShellContent Route="home"
              ContentTemplate="{DataTemplate views:HomePage}" />

    <ShellContent Route="comunicados"
              ContentTemplate="{DataTemplate views:ComunicadosPage}" />

    <ShellContent Route="cuotas"
              ContentTemplate="{DataTemplate views:CuotasPage}" />

    <!-- Tabs principales -->
    <TabBar Route="main">
        <Tab Title="Comunicados">
            <ShellContent ContentTemplate="{DataTemplate views:ComunicadosPage}" />
        </Tab>
        <Tab Title="Cuotas">
            <ShellContent ContentTemplate="{DataTemplate views:CuotasPage}" />
        </Tab>
    </TabBar>

</Shell>
