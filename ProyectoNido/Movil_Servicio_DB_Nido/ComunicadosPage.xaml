<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movil_Servicio_DB_Nido.ComunicadosPage"
             Title="ComunicadosPage"
             BackgroundColor="#F5F6FA">
    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Encabezado -->
        <Frame BackgroundColor="#F5F5F5"
               Padding="10"
               CornerRadius="10"
               HasShadow="False">
            <Label Text="Comunicados del Colegio"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </Frame>

        <!-- Lista de comunicados -->
        <CollectionView x:Name="lvComunicados"
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        SelectionMode="None">

            <CollectionView.EmptyView>
                <Label Text="No hay comunicados disponibles."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"
                       FontSize="14"/>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6"
                           Padding="12"
                           CornerRadius="12"
                           BackgroundColor="White"
                           HasShadow="True">

                        <StackLayout Spacing="6">

                            <!-- Título -->
                            <Label Text="{Binding Nombre}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333" />

                            <!-- Descripción -->
                            <Label Text="{Binding Descripcion}"
                                   FontSize="14"
                                   TextColor="#555555" />

                            <!-- Fecha -->
                            <Label Text="{Binding FechaCreacion, StringFormat='{}{0:dd/MM/yyyy}'}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   HorizontalOptions="End" />

                        </StackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>