<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movil_Servicio_DB_Nido.ComunicadosPage"
             Title="ComunicadosPage"
             BackgroundColor="#F5F6FA">
    <Grid Padding="18" RowDefinitions="Auto,*" RowSpacing="12">

        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <VerticalStackLayout>
                <Label Text="{Binding AlumnoSeleccionado}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#111827"/>
                <Label Text="Comunicados"
                       FontSize="13"
                       TextColor="#6B7280"/>
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Cambiar"
                    BackgroundColor="#E5E7EB"
                    TextColor="#111827"
                    CornerRadius="12"
                    HeightRequest="40"/>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Comunicados}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="16" Padding="14" Margin="0,0,0,12" BackgroundColor="White" HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Label Text="{Binding Titulo}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#111827"/>

                            <!-- Chip NUEVO -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="#DCFCE7"
                                   CornerRadius="12"
                                   Padding="10,4"
                                   IsVisible="{Binding EsNuevo}">
                                <Label Text="NUEVO" FontSize="11" TextColor="#166534" FontAttributes="Bold"/>
                            </Frame>

                            <Label Grid.Row="1"
                                   Text="{Binding FechaTexto}"
                                   FontSize="12"
                                   TextColor="#6B7280"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>