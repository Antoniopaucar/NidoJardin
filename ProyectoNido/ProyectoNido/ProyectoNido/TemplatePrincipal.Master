                        <div style="font-size:14px;"><asp:Label ID="lbl_Usuario" runat="server" Text="USUARIO:"></asp:Label>
                       <a href="frm_Login.aspx"><img src="Img/SALIR_2.png" alt="Inicio" class="auto-style1"></a></div>
                   </div>
                </td>
            </tr>
            <!-- Menú horizontal -->
            <tr>
                <td colspan="2">
                    <ul class="menu">
                        <!-- Grupo 1 -->
                        <li id="grupo1" runat="server" class="grupo">
                            <span class="grupo-titulo">Seguridad / Usuarios</span>
                            <ul class="submenu">
                                <li><a href="frm_Usuario.aspx"><img src="Img/usuario.png" alt="Usuario">Usuario</a></li>
                                <li><a href="frm_Rol.aspx"><img src="Img/rol.png" alt="Rol">Rol</a></li>
                                <li><a href="frm_Permiso.aspx"><img src="Img/permiso.png" alt="Permiso">Permiso</a></li>
                                <li><a href="frm_Usuario_Rol.aspx"><img src="Img/usuario rol.png" alt="Usuario Rol">Usuario Rol</a></li>
                                <li><a href="frm_Rol_Permiso.aspx"><img src="Img/rol permiso.png" alt="Rol Permiso">Rol Permiso</a></li>
